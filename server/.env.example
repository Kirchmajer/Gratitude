# Server configuration
PORT=5000
NODE_ENV=development

# OpenRouter API key
# Get your API key from https://openrouter.ai/keys
# The key should start with 'sk-or-' and have no spaces or quotes
OPENROUTER_API_KEY=your_openrouter_api_key_here

# SSL Certificate verification
# WARNING: Setting this to 0 disables SSL certificate verification and should NOT be used in production
NODE_TLS_REJECT_UNAUTHORIZED=1

# Database configuration
# No additional configuration needed for SQLite
